{
    "manifest_version": 3,
    "name": "Site-Specific Notes",
    "version": "1.0",
    "permissions": ["storage", "activeTab", "tabs"],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }