{
    "name": "StudyForge",
    "description": "Tools to help students with productivity and focus.",
    "version": "0.0.0.1",
    "manifest_version": 3,
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
          "32": "website/logos/hero-32.png",
          "128": "website/logos/hero-128.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": [
                "app.js"
            ]
        }
    ],
    "permissions": [
  "tabs",
  "cookies",
  "storage",
  "notifications",
  "alarms",
  "activeTab"
]
}